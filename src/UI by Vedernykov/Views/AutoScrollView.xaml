            HorizontalOptions="FillAndExpand"
            HorizontalScrollBarVisibility="Never"
            IsEnabled="False"
            Orientation="Vertical">

            <StackLayout
                Padding="0"
                BackgroundColor="Green"
                Orientation="Vertical"
                Spacing="0">

                <StackLayout.Behaviors>

                    <behaviors:MarqueeBehavior
                        SecondsToScroll="3.55"
                        Easing="BounceOut"
                        Direction="StartToEnd"/>

                </StackLayout.Behaviors>

                <Label Text="START dffgdf dfg dfgdf gd df  df gdfg df f dfg ddf gdf dfgd gdf gdf df"
