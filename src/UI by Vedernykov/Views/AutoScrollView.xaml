        <Style x:Key="ShortLabelStyle_i1" TargetType="Label">
            <Setter Property="FormattedText">

                <FormattedString>
                    <Span Text="START" TextColor="Red"/>
                    <Span TextColor="White" Text=" hello world "/>
                    <Span Text="END" TextColor="Red"/>
                </FormattedString>
                
            </Setter>
        </Style>

        <Style x:Key="LongLabelStyle_i1" TargetType="Label">
            <Setter Property="FormattedText">

                <FormattedString>
                    <Span Text="START" TextColor="Red"/>
                    <Span TextColor="White" Text=" dffgdf dfg dfgdf gd df  df gdfg df f dfg ddf gdf dfgd gdf gdf dfdfg dfgdf gd df  df gdfg df f dfg ddf gdf dfgd gdf gdf df dffgdf dfg dfgdf gd df  df gdfg df f dfg ddf gdf dfgd gdf gdf df "/>
                    <Span Text="END" TextColor="Red"/>
                </FormattedString>
                
            </Setter>
        </Style>

        <Style x:Key="LabelStyle_i1" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource TextAndBackgroundColor_i1}"/>
        </Style>

        <Style x:Key="ScrollViewStyle_i1" TargetType="ScrollView">
            <Setter Property="HeightRequest" Value="45"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Never"/>
            <Setter Property="IsEnabled" Value="False"/>
        </Style>

        <Style x:Key="StackLayoutStyle_i1" TargetType="StackLayout">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BackgroundColor" Value="Green"/>
            <Setter Property="Spacing" Value="0"/>
        </Style>

    </ScrollView.Resources>
    
    <StackLayout Spacing="10">

        <Label
            Text="Auto Scroll"
            TextColor="{DynamicResource TextAndBackgroundColor_i11}"
            FontSize="Large"
            Margin="0, 0, 0, 15"/>

        <Label
            Text="Long text"
            TextColor="{DynamicResource IndicationColor_i1}"
            FontSize="Medium"
            Margin="0, 0, 0, 15"/>

        <Label
            Style="{DynamicResource LabelStyle_i1}"
            Text="Orientation=Vertical, Direction=StartToEnd"/>

        <ScrollView Style="{DynamicResource ScrollViewStyle_i1}">

            <StackLayout Style="{DynamicResource StackLayoutStyle_i1}">

                <StackLayout.Behaviors>

                    <behaviors:MarqueeBehavior
                        SecondsToScroll="3.55"
                        Easing="BounceOut"
                        Direction="StartToEnd"/>

                </StackLayout.Behaviors>

                <Label Style="{DynamicResource LongLabelStyle_i1}"/>

            </StackLayout>

        </ScrollView>

