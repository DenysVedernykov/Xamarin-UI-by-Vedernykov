            HorizontalOptions="FillAndExpand"
            HorizontalScrollBarVisibility="Never"
            IsEnabled="False"
            Orientation="Vertical">

            <StackLayout
                Padding="0"
                BackgroundColor="Green"
                Orientation="Vertical"
                Spacing="0">

                <StackLayout.Behaviors>

                    <behaviors:MarqueeBehavior
                        SecondsToScroll="3.55"
                        Easing="BounceOut"
                        Direction="EndToStart"/>

                </StackLayout.Behaviors>

                <Label Text="START dffgdf dfg dfgdf gd df  df gdfg df f dfg ddf gdf dfgd gdf gdf df"
                       TextColor="Beige"/>

                <Label Text="dffgdf dfg dfgdf gd df  df gdfg df f dfg ddf gdf dfgd gdf gdf df END"
                       TextColor="Red"/>

            </StackLayout>

        </ScrollView>

        <ScrollView
            HeightRequest="45"
            HorizontalOptions="FillAndExpand"
            HorizontalScrollBarVisibility="Never"
            IsEnabled="False"
            Orientation="Horizontal">

            <StackLayout
                Padding="0"
                BackgroundColor="Green"
                Orientation="Horizontal"
                Spacing="0">

                <StackLayout.Behaviors>

                    <behaviors:MarqueeBehavior
                        SecondsToScroll="7"
