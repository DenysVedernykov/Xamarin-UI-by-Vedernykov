    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:UI_by_Vedernykov.Behaviors"
    Padding="25"
    BackgroundColor="{DynamicResource TextAndBackgroundColor_i14}"
